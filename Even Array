#include <bits/stdc++.h>
using namespace std;

int main(){
    int t; 
    cin >> t;
    while(t--){
        int n; 
        cin >> n;
        vector<int>a(n);
        for(int &x:a) cin >> x;

        int bad_even = 0, bad_odd = 0;
        for(int i = 0; i < n; i++){
            if((i % 2) != (a[i] % 2)){
                if(i % 2 == 0) bad_even++;
                else bad_odd++;
            }
        }

        cout << (bad_even == bad_odd ? bad_even : -1) << "\n";
    }
}
