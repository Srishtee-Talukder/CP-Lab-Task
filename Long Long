#include <bits/stdc++.h>
using namespace std;

int main() {
    int t; cin>>t;
    while(t--){
        int n; cin>>n;
        vector<long long> a(n);
        for(int i=0;i<n;i++) cin>>a[i];
        long long sum=0;
        int ops=0;
        bool in_neg=false;
        for(int i=0;i<n;i++){
            sum += abs(a[i]);
            if(a[i]<0){
                if(!in_neg){ ops++; in_neg=true; }
            } else in_neg=false;
        }
        cout << sum << " " << ops << "\n";
    }
}
